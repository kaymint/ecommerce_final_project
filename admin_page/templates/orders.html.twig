{% extends 'home.html.twig' %}

{% block MESSAGE %}
    {{ message }}
{% endblock %}

 {% block INFOBOX %}
{% endblock %}


{% block MAINROW %}
    <!-- Main row -->
    <div class="row">

        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Orders</h3>
                    {#<!-- Date and time range -->#}
                    {#<div class="form-group">#}
                        {#<label>Date range button:</label>#}
                        {#<div class="input-group">#}
                            {#<button class="btn btn-default pull-right" id="daterange-btn">#}
                                {#<i class="fa fa-calendar"></i> Date range picker#}
                                {#<i class="fa fa-caret-down"></i>#}
                            {#</button>#}
                        {#</div>#}
                    {#</div><!-- /.form group -->#}
                    <!-- Date range -->
                    <form action="orders.php" method="get">
                    <div class="form-group">
                        <label>Date range: {{ date }}</label>
                        <div class="input-group col-xs-8">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input required type="text" class="form-control pull-right" id="reservation" name="date">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-info">View Orders</button>
                            </div><!-- /btn-group -->
                        </div><!-- /.input group -->
                    </div><!-- /.form group -->
                    </form>

                    <div class="box-tools">
                        <div class="input-group" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr>
                            <th></th>
                            <th>Order ID</th>
                            <th>Product</th>
                            <th>Recipient</th>
                            <th>Recipient Info</th>
                            <th>Status</th>
                            <th>Qty</th>
                            <th>Cost</th>
                        </tr>

                        {% for x in orders %}
                            <tr>
                                <td>
                                    <a class="btn btn-social-icon btn-bitbucket" href="order_details.php?rid={{ x.receipt_id }}">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </td>
                                <td>{{ x.order_id }}</td>
                                <td>{{ x.product_name }}</td>
                                <td>{{ x.recepient }}</td>
                                <td>{{ x.shipping_address1 }}</td>
                                {% if x.status == 'processing' %}
                                    <td><label class="danger bg-yellow badge">{{ x.status }}</label></td>
                                {% else %}
                                    <td><label class="success bg-green badge">{{ x.status }}</label></td>
                                {% endif %}
                                <td>{{ x.qty }}</td>
                                <td>${{ x.cost }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div><!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        {% if  totalPages > 0 %}
                            {% if page == 1 %}
                                <li><a href="#" class="disabled">&laquo;</a></li>
                            {% else %}
                                <li><a href="orders.php?page={{ page - 1  }}" class="disabled">&laquo;</a></li>
                            {% endif %}

                            {% for i in page..page+3 %}
                                {% if i >= 1 and i <= totalPages %}
                                    <li><a href="orders.php?page={{ i }}">{{ i }}</a></li>
                                {% endif %}
                            {% endfor %}

                            {% if page == totalPages %}
                                <li><a href="" class="disabled">&raquo;</a></li>
                            {% else %}
                                <li><a href="orders.php?page={{ page + 1 }}" class="disabled">&raquo;</a></li>
                            {% endif %}
                        {% endif %}
                    </ul>

                    <div class="input-group-btn col-xs-7">
                        <a href="#" class="btn btn-info">Generate PDF</a>
                    </div><!-- /btn-group -->

                    <h2 class="col-xs-12 pull-left">Total: ${{ totalSum }}</h2>

                </div>

            </div><!-- /.box -->

        </div>
    </div><!-- /.row -->
{% endblock %}
